//vaiables in java script
<!DOCTYPE html>
<html>
    <body>

        <h2>JavaScript Variables</h2>

        <p id="demo"></p>

        <script>
            var pens = 5;
            var books = 6;
            var total = pens + books;
            document.getElementById("demo").innerHTML = "The total number of items are : " + total;
        </script>

    </body>
</html>

//arthmatic operators
<!DOCTYPE html>
<html>
    <body>

        <h2>The Operator</h2>

        <p id="demo"></p>

        <script>    
            var x = 50;
            var y = 30;
            var z = x - y;
            var e = x * y;
            var p = x / y;

            document.getElementById("demo").innerHTML = z;
            document.getElementById("demo").innerHTML = e;
            document.getElementById("demo").innerHTML = p;
        </script>

    </body>
</html>

//Boolean operator
<!DOCTYPE html>
<html>
    <body>

        <h2>JavaScript Booleans</h2>

        <p>Booleans: true or false:</p>

        <p id="demo"></p>

        <script>
            var x = 5;
            var y = 5;
            var z = 6;
            document.getElementById("demo").innerHTML = (x == y) + "<br>" + (x == z);
        </script>

    </body>
</html>

//Functions in java script
<!DOCTYPE html>
<html>
    <body>

        <h2>JavaScript Functions</h2>

        <p>Performs a calculation, and returns the result:</p>

        <p id="demo"></p>

        <script>
            function arthematic(p1, p2) {
                 return p1 * p2;
            }
            document.getElementById("demo").innerHTML = arthematic(400 , 3);
        </script>

    </body>
</html>

